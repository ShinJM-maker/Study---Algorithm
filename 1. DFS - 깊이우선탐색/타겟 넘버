def solution(numbers, target):
    n = len(numbers)
    answer = 0
    def dfs(idx,num_sum):
        if idx == n:
            if num_sum == target:
                nonlocal answer
                answer += 1
        if idx <n:
            dfs(idx+1,num_sum+numbers[idx])
            dfs(idx+1,num_sum-numbers[idx])

    dfs(0,0)
    return answer
